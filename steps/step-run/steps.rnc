default namespace p = "http://www.w3.org/ns/xproc"
namespace local = ""

Step = Step-run

Step-run =
  element run {
    name.ncname.attr?,
    attribute p:pipeline { xsd:NCName },
    common.attributes,
    global.attributes,
    step.attributes,
    ((WithInput | AtomicOutputDeclaration | WithOption)* & (Documentation|PipeInfo)*)
  }

